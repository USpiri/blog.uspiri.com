---
import ChevronRightIcon from "@components/icons/ChevronRightIcon.astro";
import LatestPostList from "@components/LatestPostList.astro";
import Main from "@components/Main.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Blog">
  <Main class="mt-10">
    <div class="flex flex-col text-sm">
      <p>I'm <span class="text-base font-semibold">Uriel Spiridione</span></p>
      <p>
        A fullstack web developer from Argentina with +3 years of experience on
        front-end development.
      </p>
    </div>

    <div class="mb-6 mt-14 flex justify-between">
      <h2 class="font-mono text-3xl font-semibold">Posts</h2>
      <a
        href="/post/"
        class="group flex items-center gap-0.5 text-sm font-medium text-neutral-600 hover:text-neutral-700 dark:text-neutral-400 dark:hover:text-neutral-300"
      >
        More
        <ChevronRightIcon
          class="h-4 w-4 transition-transform group-hover:translate-x-0.5"
        />
      </a>
    </div>
    <div class="flex flex-col gap-3">
      <LatestPostList />
    </div>
  </Main>
</Layout>
