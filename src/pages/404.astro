---
import LatestPostList from "@components/LatestPostList.astro";
import Main from "@components/Main.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Posts">
  <Main class="mt-10">
    <div class="mb-6 mt-14">
      <h2 class="font-mono text-3xl">Ups! 404</h2>
    </div>
    <div class="mb-6">
      Don't miss the latest posts or read more
      <a
        href="/post"
        class="font-semibold underline decoration-dashed underline-offset-4 hover:opacity-60"
      >
        here
      </a>
    </div>
    <div class="flex flex-col gap-3">
      <LatestPostList />
    </div>
  </Main>
</Layout>
