---
import BaseMeta from "@components/BaseMeta.astro";
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseMeta title={title} description="Astro description" />
  </head>
  <body
    class="bg-stone-200 py-8 text-neutral-700 dark:bg-[#121212] dark:text-neutral-300"
  >
    <div class="grid min-h-dvh grid-rows-[auto_1fr]">
      <Navbar />
      <slot />
    </div>
    <Footer />
  </body>
</html>
