---
import DocumentIcon from "./icons/DocumentIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";
import XIcon from "./icons/XIcon.astro";
import LinkIcon from "./LinkIcon.astro";
import ThemeButton from "./ThemeButton.astro";

const currentPath = Astro.url.pathname.split("/")[1];
---

<nav
  class="sticky top-0 z-10 mx-auto flex w-full max-w-3xl items-center justify-between bg-stone-200 px-5 py-5 dark:bg-[#121212] sm:px-8"
>
  <div class="inline font-semibold">
    <a href="/" class="hover:text-neutral-400 dark:hover:text-neutral-500">
      <span class="font-mono">Î´./uspiri</span>
    </a>
    {
      currentPath.length > 0 && (
        <a
          href={`/${currentPath}`}
          class="hover:text-neutral-400 dark:hover:text-neutral-500"
        >
          <span class="font-mono">/{currentPath}</span>
        </a>
      )
    }
  </div>
  <div class="flex items-center gap-3">
    <LinkIcon title="Cv" href="https://cv.uspiri.com/">
      <DocumentIcon class="h-4 w-4" />
    </LinkIcon>
    <LinkIcon title="Github" href="https://github.com/USpiri/">
      <GithubIcon class="h-4 w-4" />
    </LinkIcon>
    <LinkIcon title="X (Twitter)" href="https://x.com/urielspiridione/">
      <XIcon class="h-4 w-4" />
    </LinkIcon>
    <LinkIcon
      title="Linkedin"
      href="https://www.linkedin.com/in/urielspiridione/"
    >
      <LinkedinIcon class="h-4 w-4" />
    </LinkIcon>
    <ThemeButton />
  </div>
</nav>
