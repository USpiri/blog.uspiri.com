---
import CalendarIcon from "./icons/CalendarIcon.astro";
import FormattedDate from "./FormattedDate.astro";

interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<span
  class="flex items-center gap-1 rounded border border-neutral-400/80 px-1.5 py-1 font-mono text-xs font-medium text-neutral-600 dark:border-neutral-700 dark:text-neutral-400"
>
  <CalendarIcon class="h-3.5 w-3.5" />
  <FormattedDate date={date} />
</span>
