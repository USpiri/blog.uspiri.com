---
import ChevronLeftIcon from "./icons/ChevronLeftIcon.astro";
import CodeIcon from "./icons/CodeIcon.astro";
import ThemeButton from "./ThemeButton.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<nav
  class="fixed top-0 z-10 flex w-full items-center justify-between px-4 py-3 font-mono text-xs sm:text-sm"
>
  <a href="/playground" class="flex items-center gap-2">
    <ChevronLeftIcon class="h-4 w-4" />
    <span>Back</span>
  </a>
  <h1 class="mt-1 font-medium">{title}</h1>
  <div class="flex items-center gap-3">
    <button id="code" title="View Code">
      <CodeIcon class="h-4 w-4" />
    </button>
    <ThemeButton iconClass="h-4 w-4" />
  </div>
</nav>
